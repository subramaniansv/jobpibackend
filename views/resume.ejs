<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resume PDF</title>
    <style>
        body { font-family: Arial, sans-serif; padding: 20px; }
        h1 { color: #39b457; }
        .section { margin-bottom: 15px; }
        .job, .education { margin-bottom: 10px; padding: 10px; border-left: 4px solid #39b457; background: #f1f1f1; }
        .skills { display: flex; flex-wrap: wrap; gap: 5px; }
        .skill { background: #39b457; color: white; padding: 5px 10px; border-radius: 5px; }
    </style>
</head>
<body>
    <h1><%= resume.name %></h1>
    <p>Email: <%= resume.email %></p>
    <p>Phone: <%= resume.phone %></p>

    <div class="section">
        <h2>Skills</h2>
        <div class="skills">
            <% resume.skills.forEach(skill => { %>
                <span class="skill"><%= skill %></span>
            <% }) %>
        </div>
    </div>

    <div class="section">
        <h2>Experience</h2>
        <% resume.experience.forEach(exp => { %>
            <div class="job">
                <h3><%= exp.jobTitle %> at <%= exp.company %></h3>
                <p><%= exp.startDate %> - <%= exp.endDate %></p>
                <p><%= exp.description %></p>
            </div>
        <% }) %>
    </div>

    <div class="section">
        <h2>Education</h2>
        <% resume.education.forEach(edu => { %>
            <div class="education">
                <h3><%= edu.degree %> in <%= edu.fieldOfStudy %></h3>
                <p><%= edu.institution %></p>
                <p><%= edu.startDate %> - <%= edu.endDate %></p>
                <p><%= edu.description %></p>
            </div>
        <% }) %>
    </div>
</body>
</html>
